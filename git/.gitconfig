[column]
	ui = auto
[user]
	name = Florent Viel
	email = fviel@scaleway.com
	signingkey = DA3A633C07B7FE22
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[branch]
	autosetuprebase = always
	sort = -committerdate
[tag]
	sort = version:refname
[core]
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[alias]
	safepush = push --force-with-lease
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
#[url "git@gitlab.infra.online.net:"]
#	insteadOf = https://gitlab.infra.online.net
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
